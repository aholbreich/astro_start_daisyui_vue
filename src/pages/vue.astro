---
// Import the Vue component
import AnimatedBox from "@components/vue/AnimatedBox.vue";
import Counter from "../components/vue/Counter.vue";
---

<h1 class="text-3xl font-bold text-center">Astro + Vue Example</h1>

<!-- Vue Component -->
<!--  client:visible Loads Vue only when the component is visible. You can also use client:load to load it immediately. -->
<Counter client:visible />

<h1 class="text-3xl font-bold text-center">Astro + Vue Motion</h1>

<!-- Vue Animated Component -->
<AnimatedBox client:load  />